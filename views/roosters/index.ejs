<%- include("../header") %>
<div class="container">


<div>
    <h2 class="text-center">Bienvenue sur la page d'administration d'animaux</h2>
    <p class="lead text-center">Vous pouvez g√©rer les animaux dans la liste ci-dessous</p>
</div>
<div class="row">
    <a href="/admin/rooster/new" class="btn btn-warning mb-3">Nouvel animal</a>
</div>
<div class="row">
<div class="col-lg-12 col-md-12">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Animal</th>
            <th scope="col">Prix</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
            <% for(rooster of roosters) { %>
                <tr>
                    <th scope="row" ><%= rooster.id %></th>
                    <td><%= rooster.name %></td>
                    <td><%= rooster.price %></td>
                    <td>
                        <a href="/admin/rooster/<%= rooster.id %>"><i class="fas fa-edit fa-2x"></i></a>
                        <form action="/admin/rooster/<%= rooster.id %>/delete" method="post" style="display:inline;">
                            <button type="submit" style="border: none;"><i class="fas fa-trash-alt fa-2x"></i></button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="pagination">
        <% for(page of pages) { %>
        <a href="/admin/roosters/<%= page %>" class="<% if (page === currentPage) { %> <%='active'%> <% } %>"><%= page %></a>
        <% } %>
    </div>
</div>
</div>
<%- include("../footer") %>
